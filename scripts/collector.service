[Unit]
Description=Industrial Data collector
After=syslog.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/home/collector
ExecStart=/home/collector/run.py
SyslogIdentifier=collector
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target